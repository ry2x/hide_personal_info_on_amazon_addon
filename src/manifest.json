{
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "default_locale": "en",
    "version": "2.0.3",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.amazon.com.au/*",
        "https://www.amazon.com.br/*",
        "https://www.amazon.ca/*",
        "https://www.amazon.fr/*",
        "https://www.amazon.de/*",
        "https://www.amazon.in/*",
        "https://www.amazon.it/*",
        "https://www.amazon.co.jp/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.nl/*",
        "https://www.amazon.sg/*",
        "https://www.amazon.es/*",
        "https://www.amazon.com.tr/*",
        "https://www.amazon.ae/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.com/*",
        "https://www.amazon.cn/*"
    ],
    "action": {
        "default_popup": "html/popup.html"
    },
    "icons": {
        "128": "icon/icon128.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "amazon-personal-information-hide@example.com"
        }
    }
}